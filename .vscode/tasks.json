{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "go",
			"label": "go: build selkieman-compose",
			"command": "build",
			// "args": [
			// 	"./..."
			// ],
			"problemMatcher": [
				"$go"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build",
			"dependsOn": [
				"rm selkieman-compose"
			],
		},
		{
			"type": "shell",
			"label": "go: run selkieman-compose",
			"command": "${workspaceFolder}/selkieman-compose ps -q",
			// "args": ["ps"],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "none",
			"dependsOn": [
				"go: build selkieman-compose"
			],
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "python3: test",
			"command": "python3 ${workspaceFolder}/test.py",
			"args": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "test"
		},
		{
			"type": "shell",
			"label": "podman-compose",
			"command": "podman-compose ps",
			"options": {
				"cwd": "${workspaceFolder}/test"
			},
			"group": "none",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "rm selkieman-compose",
			"command": "rm -f selkieman-compose",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "none",
			"problemMatcher": []
		}
	]
}